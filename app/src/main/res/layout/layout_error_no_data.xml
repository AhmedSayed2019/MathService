<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_errorCase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/_16sdp"
        android:orientation="vertical">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/ivError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/data_not_found"

            />

        <TextView
            android:id="@+id/tvErrorTitle_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/avenir_heavy"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/no_results"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintStart_toStartOf="@+id/ivError"
            app:layout_constraintTop_toBottomOf="@+id/ivError" />

        <TextView
            android:id="@+id/tvErrorBody_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_heavy"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/_10sdp"
            android:text="@string/sorry_there_are_no_results"
            android:textColor="@color/taupe"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@+id/tvErrorTitle_connection"
            app:layout_constraintTop_toBottomOf="@+id/tvErrorTitle_connection" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>